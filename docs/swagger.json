                "parameters": [
                    {
                        "type": "string",
                        "description": "Company API key",
                        "name": "X-API-Key",
                        "in": "header",
                        "required": true
                    },
                    {
                        "description": "File upload request",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
